{
    "manifest_version": 3,
    "name": "Advanced Find Extension",
    "version": "1.1.00", 
    "description": "Advanced text finding, highlighting, and export extension",
    "author": "Jason Aul",
    "icons": {
        "16": "images/icon16.png", 
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "contextMenus",
        "history"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [{
        "resources": [
            "modules/config.js",
            "modules/dom-utils.js",
            "modules/search-utils.js",
            "modules/highlight-manager.js",
            "modules/persistent-highlights.js",
            "modules/export-highlights.js",
            "modules/live-search.js",
            "modules/pattern-library.js",
            "popup.html",
            "popup.css",
            "popup.js",
            "lib/mark.min.js" 
        ],
        "matches": ["<all_urls>"]
    }],
   "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": [
          "lib/mark.min.js",
          "modules/config.js",        
          "modules/dom-utils.js",
          "modules/search-utils.js",
          "modules/highlight-manager.js", 
          "modules/persistent-highlights.js", 
          "modules/export-highlights.js", 
          "content.js"                
        ],
        "css": [],
        "run_at": "document_idle" 
      }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": { 
          "16": "images/icon16.png",
          "48": "images/icon48.png"
        },
        "default_title": "Advanced Find" 
    }
} 
